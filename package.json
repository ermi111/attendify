{
  "name": "attendify",
  "version": "1.0.0",
  "description": "electron app code for Attendify",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "electron": "electron build/main.js",
    "start": "tsc && electron build/main.js",
    "dist": "electron-builder",
    "dev": "ts-node src/main.ts"
  },
  "build": {
    "appId": "com.erar111.attendify",
    "files": [
      "build/out/**/*",
      "build/preload/preload.js",
      "build/main.js",
      "build/server.js",
      "build/windowManager.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "Ermiyas Arage <ermiyasarage2023@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "find-free-port": "^2.0.0",
    "tslib": "^2.7.0"
  }
}
